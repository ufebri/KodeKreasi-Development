<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient"
    android:gravity="center"
    tools:context="com.kode.kreasi.kodekreasirecruitment.MainActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/contact_96px"
        android:id="@+id/img_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sistem_pendataan_penduduk"
        android:layout_below="@id/img_logo"
        android:textColor="@color/font"
        android:id="@+id/tv_title"/>
    <Button

        android:layout_below="@id/tv_title"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_registrasi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/main_button"
        android:text="@string/register_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@drawable/main_button_text"/>

    <Button
        android:id="@+id/btn_lihat_data"
        android:layout_marginVertical="20dp"
        android:layout_below="@id/btn_registrasi"
        android:background="@drawable/main_button"
        android:textColor="@drawable/main_button_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/lihat_data"/>
</RelativeLayout>
