<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.kode.kreasi.kodekreasirecruitment.RegisterActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarRegister"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:layout_scrollFlags="scroll|enterAlways"
        />

    <EditText
        android:layout_marginStart="20dp"
        android:id="@+id/edt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Masukkan Nama Anda"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="32dp" />

    <EditText
        android:layout_marginStart="20dp"

        android:id="@+id/edt_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Masukan Alamat Anda"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="99dp" />

    <Spinner
        android:layout_marginStart="20dp"
        android:id="@+id/spinner_provinsi"
        android:layout_width="200dp"
        android:layout_height="22dp" />

    <Spinner
        android:layout_marginStart="20dp"
        android:id="@+id/spinner_kota"
        android:layout_width="200dp"
        android:layout_height="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_marginStart="20dp"
            android:id="@+id/edt_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="date"
            android:hint="dd"/>
        <EditText
            android:layout_marginStart="20dp"
            android:id="@+id/edt_bulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="date"
            android:hint="mm"/>
        <EditText
            android:layout_marginStart="20dp"
            android:id="@+id/edt_tahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:inputType="date"
            android:hint="dd"/>
    </LinearLayout>



    <EditText
        android:id="@+id/edt_nomor"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="No hp" />

    <Button
        android:layout_marginStart="20dp"
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="381dp" />

</LinearLayout>
